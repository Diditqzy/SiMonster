<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" style="-fx-background-color: #f4f4f4;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="280.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
         <children>
            <Label styleClass="title-label" text="SIMONSTER" />
            <Label text="Silakan login untuk melanjutkan" />
            <VBox prefWidth="100.0" spacing="5.0">
               <children>
                  <Label text="Username" />
                  <TextField fx:id="usernameField" promptText="Masukkan username" styleClass="text-field" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="passwordField" promptText="Masukkan password" styleClass="text-field" />
               </children>
            </VBox>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="250.0" styleClass="button-primary" text="Login" />
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <effect>
            <DropShadow color="#00000026" radius="10.0" />
         </effect>
      </VBox>
      <Hyperlink fx:id="registerLink" onAction="#handleRegisterLink" text="Belum punya akun? Buat di sini" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>