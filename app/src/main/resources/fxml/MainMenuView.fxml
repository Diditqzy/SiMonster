<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.MainMenuController">
   <left>
      <VBox prefHeight="600.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #1e2a38;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <Label fx:id="welcomeLabel" styleClass="sidebar-label-bold" text="Halo, Pengguna!" textFill="WHITE" />
                  <Label fx:id="levelLabel" styleClass="sidebar-label" text="Level: 1" textFill="#b0b0b0" />
                  <Label fx:id="expLabel" styleClass="sidebar-label" text="EXP: 0 / 100" textFill="#b0b0b0" />
                  <Label fx:id="badgeLabel" styleClass="sidebar-label" text="Badge: Pemula" textAlignment="CENTER" textFill="#b0b0b0" wrapText="true" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#showDashboard" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-button" text="Dashboard" />
            <Button mnemonicParsing="false" onAction="#showProgram" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-button" text="Program Latihan" />
            <Button mnemonicParsing="false" onAction="#showHistory" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-button" text="Riwayat Latihan" />
            <AnchorPane VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-button-logout" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" top="20.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="dashboardPane" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label styleClass="pane-title" text="Dashboard" />
                  <Label maxWidth="400.0" text="Selamat datang di SIMONSTER! Pilih menu di sebelah kiri untuk memulai petualangan fitness Anda. Jaga konsistensi dan jadilah versi terkuat dari dirimu!" textAlignment="CENTER" wrapText="true" />
               </children>
            </VBox>
            <VBox fx:id="programPane" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" visible="false">
               <children>
                  <Label styleClass="pane-title" text="Program Latihan Anda" />
                  <TextArea fx:id="programStatusArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                  <Button fx:id="doExerciseButton" mnemonicParsing="false" onAction="#handleDoExercise" styleClass="button-primary" text="Mulai Aktivitas" />
                  <Button fx:id="createProgramButton" mnemonicParsing="false" onAction="#handleCreateProgram" styleClass="button-primary" text="Buat Program Baru" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="historyPane" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" visible="false">
               <children>
                  <Label styleClass="pane-title" text="Riwayat Latihan" />
                  <TableView fx:id="historyTable" prefHeight="450.0" prefWidth="560.0">
                    <columns>
                      <TableColumn fx:id="tanggalColumn" prefWidth="100.0" text="Tanggal" />
                      <TableColumn fx:id="programColumn" prefWidth="150.0" text="Program" />
                        <TableColumn fx:id="hariColumn" prefWidth="50.0" text="Hari Ke" />
                        <TableColumn fx:id="latihanColumn" prefWidth="250.0" text="Aktivitas" />
                    </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>