<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.MainMenuController">
   <left>
      <VBox prefWidth="220.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="150.0" spacing="5.0">
               <children>
                  <Label fx:id="welcomeLabel" styleClass="sidebar-label-bold" text="Halo, Pengguna!" textAlignment="CENTER" wrapText="true" />
                  <Label fx:id="levelLabel" styleClass="sidebar-label" text="Level: 1" />
                  <Label fx:id="expLabel" styleClass="sidebar-label" text="EXP: 0 / 100" />
                  <Label fx:id="badgeLabel" styleClass="sidebar-label" text="Badge: Pemula" textAlignment="CENTER" wrapText="true" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showDashboard" prefHeight="40.0" styleClass="sidebar-button" text="Dashboard" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showProgram" prefHeight="40.0" styleClass="sidebar-button" text="Program Latihan" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showHistory" prefHeight="40.0" styleClass="sidebar-button" text="Riwayat Latihan" />
            <AnchorPane VBox.vgrow="ALWAYS" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" styleClass="sidebar-button-logout" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" top="20.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <StackPane styleClass="main-bg" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="dashboardPane" alignment="CENTER" spacing="20.0">
               <children>
                  <Label styleClass="pane-title" text="Dashboard" />
                  <Label maxWidth="450.0" text="Selamat datang di SIMONSTER! Pilih menu di sebelah kiri untuk memulai petualangan fitness Anda. Jaga konsistensi dan jadilah versi terkuat dari dirimu!" textAlignment="CENTER" wrapText="true" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="programPane" alignment="TOP_CENTER" spacing="20.0" visible="false" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="pane-title" text="Program Latihan Anda" />
                  <TextArea fx:id="programStatusArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                  <Button fx:id="doExerciseButton" maxWidth="300.0" mnemonicParsing="false" onAction="#handleDoExercise" styleClass="button-primary" text="Mulai Aktivitas" />
                  <Button fx:id="createProgramButton" maxWidth="300.0" mnemonicParsing="false" onAction="#handleCreateProgram" styleClass="button-primary" text="Buat Program Baru" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="historyPane" alignment="TOP_CENTER" spacing="20.0" visible="false" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="pane-title" text="Riwayat Latihan" />
                  <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="tanggalColumn" minWidth="100.0" prefWidth="-1.0" text="Tanggal" />
                      <TableColumn fx:id="programColumn" minWidth="150.0" prefWidth="-1.0" text="Program" />
                        <TableColumn fx:id="hariColumn" minWidth="50.0" prefWidth="-1.0" text="Hari Ke" />
                        <TableColumn fx:id="latihanColumn" minWidth="250.0" prefWidth="300.0" text="Aktivitas" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>